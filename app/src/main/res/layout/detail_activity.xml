<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/details_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/details_movie_thumbnail"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:layout_gravity="start"
                android:adjustViewBounds="true"
                android:padding="@dimen/overall_padding"
                android:scaleType="centerCrop"
                android:src="@drawable/noposter"
                android:visibility="visible" />

                <TextView
                    android:id="@+id/details_add_to_favorites"
                    style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/details_movie_thumbnail"
                   android:layout_toRightOf="@id/details_movie_thumbnail"
                    android:layout_marginStart="@dimen/details_margin"
                    android:layout_marginLeft="@dimen/details_margin"
                    android:padding="@dimen/details_small_padding"
                    android:paddingTop="@dimen/overall_padding"
                    android:text="Add to favorites :"
                    android:textColor="@color/details_text_dark_color"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/details_margin_fav_top"/>
                <ImageView
                    android:id="@+id/details_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="@dimen/overall_padding"
                    android:src="@drawable/favoritewhite"
                    android:layout_below="@id/details_add_to_favorites"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/details_margin_heart"

                   />

            </RelativeLayout>
            <TextView
                android:id="@+id/details_title_label"
                style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/details_margin"
                android:layout_marginLeft="@dimen/details_margin"
                android:padding="@dimen/details_small_padding"
                android:paddingTop="@dimen/overall_padding"
                android:text="@string/details_movie_title"
                android:textColor="@color/details_text_dark_color"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/details_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/overall_padding"
                android:paddingRight="@dimen/overall_padding"
                android:paddingBottom="@dimen/details_line_padding"
                android:textColor="@color/details_text_dark_color"
                tools:text="details_movie_title" />

            <TextView
                android:id="@+id/details_synopsis_label"
                style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/details_margin"
                android:layout_marginLeft="@dimen/details_margin"
                android:padding="@dimen/details_small_padding"
                android:paddingTop="@dimen/overall_padding"
                android:text="@string/details_movie_synopsis"
                android:textColor="@color/details_text_dark_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/overall_padding"
                android:paddingRight="@dimen/overall_padding"
                android:paddingBottom="@dimen/details_line_padding"
                android:textColor="@color/details_text_dark_color"
                tools:text="details_synopsis" />

            <TextView
                android:id="@+id/details_rating_label"
                style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/details_margin"
                android:layout_marginLeft="@dimen/details_margin"
                android:padding="@dimen/details_small_padding"
                android:paddingTop="@dimen/overall_padding"
                android:text="@string/details_movie_rating"
                android:textColor="@color/details_text_dark_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/overall_padding"
                android:paddingRight="@dimen/overall_padding"
                android:paddingBottom="@dimen/details_line_padding"
                android:textColor="@color/details_text_dark_color"
                tools:text="details_rating" />

            <TextView
                android:id="@+id/details_date_label"
                style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/details_margin"
                android:layout_marginLeft="@dimen/details_margin"
                android:padding="@dimen/details_small_padding"
                android:paddingTop="@dimen/overall_padding"
                android:text="@string/details_movie_date"
                android:textColor="@color/details_text_dark_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/overall_padding"
                android:paddingRight="@dimen/overall_padding"
                android:paddingBottom="@dimen/details_line_padding"
                android:textColor="@color/details_text_dark_color"
                tools:text="details_date" />

            <TextView
                android:id="@+id/details_trailer_first_label"
                style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/details_margin"
                android:layout_marginLeft="@dimen/details_margin"
                android:padding="@dimen/details_small_padding"
                android:paddingTop="@dimen/overall_padding"
                android:text="Trailer 1"
                android:textColor="@color/details_text_dark_color"
                android:textStyle="bold" />

            <VideoView
                android:id="@+id/details_trailer_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/details_trailer_second_label"
                style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/details_margin"
                android:layout_marginLeft="@dimen/details_margin"
                android:padding="@dimen/details_small_padding"
                android:paddingTop="@dimen/overall_padding"
                android:text="Trailer 2"
                android:textColor="@color/details_text_dark_color"
                android:textStyle="bold" />

            <VideoView
                android:id="@+id/details_trailer_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/details_trailer_reviews_label"
                style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/details_margin"
                android:layout_marginLeft="@dimen/details_margin"
                android:padding="@dimen/details_small_padding"
                android:paddingTop="@dimen/overall_padding"
                android:text="Reviews"
                android:textColor="@color/details_text_dark_color"
                android:textStyle="bold" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/details_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/overall_padding"
                android:paddingRight="@dimen/overall_padding"
                android:paddingBottom="@dimen/details_line_padding"
                android:textColor="@color/details_text_dark_color"
                tools:text="reviews" />
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
